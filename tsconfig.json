{
  "compilerOptions": {
    "target": "ESNext",
    "moduleResolution": "node",
    "module": "NodeNext",
    "noEmit": false,
    "outDir": "./build",
    "noImplicitAny": false,
    "allowJs": false,
    "removeComments": true,
    "declaration": true,
    "preserveConstEnums": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "experimentalDecorators": true,
    "esModuleInterop": false,
    "strict": true,
    "rootDir": "./source"
  },
  "exclude": [
    "node_modules",
    "build"
  ],
  "include": [
    "./source"
  ]
}